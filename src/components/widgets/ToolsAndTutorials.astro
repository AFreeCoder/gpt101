---
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Button from '~/components/ui/Button.astro';

interface Props {
  id?: string;
  isDark?: boolean;
  classes?: Record<string, string>;
  bg?: string;
}

const {
  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;

// 工具数据
const tools = [
  { name: 'ChatGPT状态检测', icon: '🔍', href: 'https://status.openai.com/' },
//  { name: '提示词生成器', icon: '💡', href: 'https://promptperfect.jinaai.cn/' },
//  { name: '翻墙工具推荐', icon: '🌐', href: '/tools/vpn-guide' },
//  { name: 'AI工具导航站', icon: '🚀', href: 'https://ai-bot.cn/' },
//  { name: '格式转换助手', icon: '🔄', href: 'https://convertio.co/' },
//  { name: '更多工具', icon: '⭐', href: '/tools' },
];

// 教程数据
const tutorials = [
  {
    title: 'ChatGPT新手使用完全指南',
    icon: '📖',
    href: '/blog/chatgpt-beginner-guide',
    description: '从注册到高级使用技巧'
  },
  {
    title: 'Plus会员功能详解与对比',
    icon: '📖',
    href: '/blog/chatgpt-plus-features',
    description: '深度解析Plus会员价值'
  }
];
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-6xl ${classes?.container ?? ''}`} bg={bg}>
  <div class="text-center mb-16">
    <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-4">
      实用工具 & 精选教程
    </h2>
  </div>

  <div class="grid lg:grid-cols-2 gap-12">
    <!-- 工具集合 -->
    <div>
      <h3 class="text-2xl font-bold text-gray-800 mb-8 flex items-center gap-2">
        🔧 ChatGPT实用工具集合
      </h3>

      <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
        {tools.map((tool) => (
          <a
            href={tool.href}
            target={tool.href.startsWith('http') ? '_blank' : '_self'}
            class="bg-white rounded-lg p-4 shadow-md border border-gray-100 hover:shadow-lg transition-shadow duration-300 text-center group"
          >
            <div class="text-3xl mb-3 group-hover:scale-110 transition-transform duration-300">
              {tool.icon}
            </div>
            <div class="text-sm font-medium text-gray-700 group-hover:text-blue-600 transition-colors">
              {tool.name}
            </div>
          </a>
        ))}
      </div>
    </div>

    <!-- 教程文档 -->
    <div>
      <h3 class="text-2xl font-bold text-gray-800 mb-8 flex items-center gap-2">
        📚 精选教程文档
      </h3>

      <div class="space-y-4">
        {tutorials.map((tutorial) => (
          <a
            href={tutorial.href}
            class="block bg-white rounded-lg p-6 shadow-md border border-gray-100 hover:shadow-lg transition-shadow duration-300 group"
          >
            <div class="flex items-start gap-4">
              <div class="text-2xl group-hover:scale-110 transition-transform duration-300">
                {tutorial.icon}
              </div>
              <div class="flex-1">
                <h4 class="font-bold text-gray-800 group-hover:text-blue-600 transition-colors mb-2">
                  {tutorial.title}
                </h4>
                <p class="text-sm text-gray-600">
                  {tutorial.description}
                </p>
              </div>
              <div class="text-gray-400 group-hover:text-blue-500 transition-colors">
                →
              </div>
            </div>
          </a>
        ))}
      </div>

      <div class="mt-8 text-center">
        <Button
          variant="secondary"
          href="/blog"
          class="inline-flex items-center gap-2"
        >
          📚 查看更多教程 →
        </Button>
      </div>
    </div>
  </div>
</WidgetWrapper>