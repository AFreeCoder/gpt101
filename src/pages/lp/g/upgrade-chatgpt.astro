            <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span>稳定运营2年+</span>
          </div>
        </div>

      </div>
    </Fragment>
  </Hero>

  <!-- Reviews Carousel Section ******************* -->
  <WidgetWrapper id="reviews" containerClass="max-w-6xl pt-3 pb-8 md:pt-4 md:pb-10 lg:pt-5 lg:pb-12">
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-white dark:bg-transparent"></div>
    </Fragment>
    <Headline title="客户好评展示" />

    <div
      class="mt-6 review-marquee w-screen relative left-1/2 right-1/2 -ml-[50vw] -mr-[50vw]"
      data-review-marquee
    >
      <div class="overflow-hidden py-4">
        <div
          class:list={[
            'review-row review-row--top flex w-max gap-4 py-2 px-4 sm:px-8 lg:px-12',
            { 'review-row--animate': shouldAnimateReviews },
          ]}
          style="animation-duration: 34s;"
        >
          {
            reviewRowTopLoop.map((image) => (
              <a
                class="block rounded-xl overflow-hidden bg-slate-50 border border-slate-200 hover:border-blue-300 transition-colors"
                href={image.src}
                target="_blank"
                rel="noopener noreferrer"
                data-review-image
                data-image-src={image.src}
                data-image-alt={image.alt}
                aria-label="查看好评截图"
              >
                <div class="aspect-[4/3] w-[240px] sm:w-[280px] lg:w-[320px]">
                  <img
                    src={image.src}
                    alt={image.alt}
                    class="w-full h-full object-contain"
                    loading="lazy"
                    decoding="async"
                  />
                </div>
              </a>
            ))
          }
        </div>
        <div
          class:list={[
            'review-row review-row--bottom flex w-max gap-4 py-2 px-4 sm:px-8 lg:px-12',
            { 'review-row--animate': shouldAnimateReviews },
          ]}
          style="animation-duration: 40s; animation-delay: -12s;"
        >
          {
            reviewRowBottomLoop.map((image) => (
              <a
                class="block rounded-xl overflow-hidden bg-slate-50 border border-slate-200 hover:border-blue-300 transition-colors"
                href={image.src}
                target="_blank"
                rel="noopener noreferrer"
                data-review-image
                data-image-src={image.src}
                data-image-alt={image.alt}
                aria-label="查看好评截图"
              >
                <div class="aspect-[4/3] w-[240px] sm:w-[280px] lg:w-[320px]">
                  <img
                    src={image.src}
                    alt={image.alt}
                    class="w-full h-full object-contain"
                    loading="lazy"
                    decoding="async"
                  />
                </div>
              </a>
            ))
          }
        </div>
      </div>
    </div>
  </WidgetWrapper>

  <div
    id="review-modal"
    class="fixed inset-0 z-50 hidden place-items-center pointer-events-none"
    role="dialog"
    aria-modal="true"
    aria-hidden="true"
  >
    <div class="absolute inset-0 bg-black/70" data-review-modal-backdrop></div>
    <button
      type="button"
      class="fixed right-4 top-4 z-30 inline-flex h-10 w-10 items-center justify-center rounded-full bg-white/95 text-slate-700 shadow-lg hover:bg-white pointer-events-auto"
      data-review-modal-close
      aria-label="关闭图片预览"
    >
