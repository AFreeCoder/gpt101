    id="upgrade-steps"
    title="升级步骤"
    subtitle="三步完成升级，流程清晰可追踪"
    items={upgradeSteps}
    callToAction={{
      text: purchaseLabel,
      href: purchaseUrl,
      target: '_blank',
      rel: 'noopener noreferrer',
    }}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-white dark:bg-transparent"></div>
    </Fragment>
  </Steps2>

  <!-- FAQs Section ******************* -->
  <FAQs
    id="faqs"
    title="常见问题"
    subtitle="关于 ChatGPT Plus 升级的常见问题"
    tagline="FAQ"
    classes={{ container: 'max-w-6xl' }}
    items={faqs}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-gray-50 dark:bg-transparent"></div>
    </Fragment>
  </FAQs>
</Layout>
<style is:inline>
  @keyframes review-marquee {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .review-row--animate {
    animation-name: review-marquee;
    animation-timing-function: linear;
    animation-iteration-count: infinite;
  }

  .review-marquee:hover .review-row--animate {
    animation-play-state: paused;
  }
</style>
<script is:inline>
  let reviewPreviewCleanup = null;

  const initReviewPreview = () => {
    if (reviewPreviewCleanup) {
      reviewPreviewCleanup();
    }

    const modal = document.getElementById('review-modal');
    if (!modal) return;
    const modalImg = modal.querySelector('img');
    const closeBtn = modal.querySelector('[data-review-modal-close]');
    const triggers = Array.from(document.querySelectorAll('[data-review-image]'));

    if (!modalImg || triggers.length === 0) return;

    const openModal = (src, alt) => {
      modalImg.src = src;
      modalImg.alt = alt || '客户好评截图';
      modal.classList.remove('hidden');
      modal.classList.add('grid');
      modal.setAttribute('aria-hidden', 'false');
    };

    const closeModal = () => {
      modal.classList.add('hidden');
      modal.classList.remove('grid');
      modal.setAttribute('aria-hidden', 'true');
      modalImg.src = '';
      modalImg.alt = '';
    };

    const onTriggerClick = (event) => {
      event.preventDefault();
      const target = event.currentTarget;
      const src = target.getAttribute('data-image-src');
      if (!src) return;
      const alt = target.getAttribute('data-image-alt');
      openModal(src, alt);
    };

    const onDocumentClick = (event) => {
      if (modal.classList.contains('hidden')) return;
      if (event.target.closest('[data-review-modal-image]')) return;
      event.preventDefault();
      event.stopPropagation();
      closeModal();
    };

    const onKeyDown = (event) => {
      if (event.key === 'Escape') {
        closeModal();
      }
    };

    triggers.forEach((trigger) => {
      trigger.addEventListener('click', onTriggerClick);
    });
    closeBtn?.addEventListener('click', closeModal);
    document.addEventListener('click', onDocumentClick, true);
    document.addEventListener('keydown', onKeyDown);

    reviewPreviewCleanup = () => {
      triggers.forEach((trigger) => {
        trigger.removeEventListener('click', onTriggerClick);
      });
      closeBtn?.removeEventListener('click', closeModal);
      document.removeEventListener('click', onDocumentClick, true);
      document.removeEventListener('keydown', onKeyDown);
      closeModal();
      reviewPreviewCleanup = null;
    };
  };

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initReviewPreview);
  } else {
    initReviewPreview();
  }

  document.addEventListener('astro:page-load', initReviewPreview);
  document.addEventListener('astro:before-swap', () => {
    if (reviewPreviewCleanup) {
      reviewPreviewCleanup();
    }
  });
</script>
