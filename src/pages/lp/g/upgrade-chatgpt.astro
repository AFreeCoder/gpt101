---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Headline from '~/components/ui/Headline.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';

import { siteConfig } from '~/config/site';

const metadata = {
  title: 'ChatGPT Plus 快速升级 - 广告专用落地页',
  description:
    'ChatGPT Plus 代充快速升级页面：无需海外信用卡，微信/支付宝可用，通常 1-2 分钟完成充值。升级步骤清晰，客户好评截图可查看。',
  ignoreTitleTemplate: true,
};

const purchaseUrl = siteConfig.conversionLanding.links.purchase;
const purchaseLabel = siteConfig.conversionLanding.buttons.purchase;
const reviewImages = siteConfig.conversionLanding.reviews?.images ?? [];
const reviewRowTop = reviewImages.filter((_, index) => index % 2 === 0);
const reviewRowBottom = reviewImages.filter((_, index) => index % 2 === 1);
const reviewRowTopItems = reviewRowTop.length > 0 ? reviewRowTop : reviewImages;
const reviewRowBottomItems = reviewRowBottom.length > 0 ? reviewRowBottom : reviewImages;
const reviewRowTopLoop = [...reviewRowTopItems, ...reviewRowTopItems];
const reviewRowBottomLoop = [...reviewRowBottomItems, ...reviewRowBottomItems];
const shouldAnimateReviews = reviewImages.length > 1;

const upgradeSteps = [
  {
    title: '购买卡密',
    description: '点击「立即升级」，选择 Plus 充值，获取卡密。',
    icon: 'tabler:shopping-cart',
  },
  {
    title: '卡密验证',
    description: '打开自助充值系统，核验卡密。',
    icon: 'tabler:credit-card',
  },
  {
    title: '关联 ChatGPT 账号',
    description: '输入 ChatGPT Token 信息，关联账号。',
    icon: 'tabler:credit-card',
  },
  {
    title: '1-2 分钟完成升级',
    description: '系统自动处理，多数时段 1-2 分钟内完成升级。',
    icon: 'tabler:circle-check',
  },
];

const faqs = [
  {
